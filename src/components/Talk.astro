---
const { venue, title, authors, image, link } = Astro.props;

import { Image } from "astro:assets";
---

<article class="talk-item">
  <div class="talk-image">
    <img src={image.src} alt={title} />
  </div>
  <div class="talk-content">
    <span class="talk-venue">{venue} Â· ðŸŽ¥ <a href={link}>Watch</a></span>
    <h3 class="talk-title">{title}</h3>
    <p class="talk-authors">{authors}</p>
  </div>
</article>

<style>
.talk-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.talk-image img {
  width: 240px;
  height: 80px;
  object-fit: cover;
  border-radius: 8px;
}

.talk-content {
  flex: 1;
}

.talk-venue {
  font-size: 0.9rem;
  color: #888;
}

.talk-title {
  margin: 0.2rem 0;
  font-size: 1.1rem;
}

.talk-authors {
  font-size: 1rem;
  margin: 0;
  color: #444;
}

/* Responsive design */
@media (max-width: 640px) {
  .talk-item {
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .talk-image {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  
  .talk-image img {
    width: 100%;
    max-width: 240px;
    height: auto;
  }
}
</style>