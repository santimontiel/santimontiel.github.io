---
const { venue, title, authors, image, type, location} = Astro.props;

import { Image } from "astro:assets";
import { formatAuthors, formatVenue } from "../lib/formatUtils";

const formattedAuthors = formatAuthors(authors, "Santiago Montiel-Mar√≠n");
const formattedVenue = formatVenue(venue, type, location);

// Map publication types to colors
const typeColors: Record<string, string> = {
  preprint: '#ef4444',
  conference: '#4e5cf7',
  journal: '#22c55e',
  workshop: '#f97316'
};

const badgeColor = typeColors[type?.toLowerCase()] || '#888';
---

<article class="pub-item">
  <div class="pub-image">
    <Image src={image} alt={title} />
  </div>
  <div class="pub-content">
    <div class="pub-meta">
      <span class="pub-type" style={`background-color: ${badgeColor};`}>
        {type ? type.charAt(0).toUpperCase() + type.slice(1).toLowerCase() : ''}
      </span>
      <span class="pub-venue" set:html={formattedVenue}></span>
    </div>
    <h3 class="pub-title">{title}</h3>
    <p class="pub-authors" set:html={formattedAuthors}></p>
  </div>
</article>

<style>
.pub-item {
  display: flex;
  align-items: flex-start;
  gap: 1rem;
  margin-bottom: 1rem;
}

.pub-image img {
  width: 240px;
  height: 160px;
  object-fit: cover;
  border-radius: 8px;
}

.pub-content {
  flex: 1;
}

.pub-meta {
  display: flex;
  align-items: flex-start;
  gap: 0.75rem;
  margin-bottom: 0.3rem;
}

.pub-type {
  font-size: 0.8rem;
  color: #fff;
  font-weight: 600;
  border-radius: 6px;
  padding: 0.25rem 0.4rem;
  text-align: center;
  flex-shrink: 0;
  min-width: 85px;
}

.pub-venue {
  font-size: 0.85rem;
  color: #888;
  line-height: 1.3;
}

.pub-title {
  margin: 0.2rem 0;
  font-size: 1.1rem;
}

.pub-authors {
  font-size: 0.9rem;
  margin: 0;
  color: #444;
}

/* Responsive design */
@media (max-width: 640px) {
  .pub-item {
    flex-direction: column;
    gap: 0.75rem;
  }
  
  .pub-image {
    width: 100%;
    display: flex;
    justify-content: center;
  }
  
  .pub-image img {
    width: 100%;
    max-width: 240px;
    height: auto;
  }
}
</style>